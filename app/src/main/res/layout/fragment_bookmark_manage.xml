<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/bookmark_manage_edit_btn"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@drawable/button_sub_solid"
        android:text="편집"
        android:gravity="center|center_horizontal"
        app:layout_constraintBottom_toTopOf="@+id/bookmark_category_rv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bookmark_manage_save_btn"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@drawable/button_sub_solid"
        android:text="저장"
        android:visibility="gone"
        android:gravity="center|center_horizontal"
        app:layout_constraintBottom_toTopOf="@+id/bookmark_category_rv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bookmark_category_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="80dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/area_item" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bookmark_manage_bookmark_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@+id/bookmark_category_rv"
        tools:listitem="@layout/bookmarkmanage_bookmark_item"/>



</androidx.constraintlayout.widget.ConstraintLayout>