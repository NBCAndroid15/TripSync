<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/view_round_white_6"
    android:gravity="center"
    android:minWidth="300dp"
    android:orientation="vertical"
    android:padding="20dp">

    <ImageView
        android:id="@+id/confirm_dialog_logo"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_logo" />

    <TextView
        android:id="@+id/confirm_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="50dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="정말로 삭제 하시겠습니까?"
        tools:text="정말로 삭제 하시겠습니까?" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/confirm_no_btn"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginEnd="7dp"
            android:layout_weight="1"
            android:background="@drawable/setup_btn_round"
            android:text="취소"
            android:textSize="14sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/confirm_yes_btn"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/setup_btn_round"
            android:text="확인"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>