<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:layout_marginTop="10dp"
    android:layout_marginHorizontal="5dp"
    android:orientation="horizontal">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/friend_manage_image"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/Circle"
        app:shapeAppearance="@style/Circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/friend_manage_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="닉네임"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/friend_manage_image"
        app:layout_constraintTop_toTopOf="@+id/friend_manage_image" />

    <TextView
        android:id="@+id/friend_manage_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="이메일"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/friend_manage_image"
        app:layout_constraintTop_toBottomOf="@+id/friend_manage_nickname" />

    <ImageView
        android:id="@+id/friend_manage_delete_btn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_bookmark_delete"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>