<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="30dp" >

    <ImageView
        android:id="@+id/signout_dialog_logo"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/signout_dialog_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정말로 탈퇴 하시겠습니까?"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/signout_dialog_logo"
        app:layout_constraintStart_toStartOf="@+id/signout_dialog_logo"
        app:layout_constraintTop_toBottomOf="@+id/signout_dialog_logo" />

    <TextView
        android:id="@+id/signout_dialog_no_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/button_gray_light"
        android:gravity="center"
        android:paddingVertical="10dp"
        android:text="취소"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/signout_dialog_yes_btn"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signout_dialog_text" />

    <TextView
        android:id="@+id/signout_dialog_yes_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_gray_dark"
        android:text="확인"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingVertical="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/signout_dialog_no_btn"
        app:layout_constraintTop_toTopOf="@+id/signout_dialog_no_btn" />


</androidx.constraintlayout.widget.ConstraintLayout>