<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TripSync" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@color/white</item> <!-- 상태바 색상-->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="Theme.TripSync" parent="Base.Theme.TripSync" />

    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="android:textColor">@drawable/calendar_selector_textcolor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CalendarWidgetHeader">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/npsfont_extra</item>
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/npsfont</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@drawable/calendar_selector_textcolor</item>
        <item name="android:fontFamily">@font/npsfont</item>
    </style>

    <style name="Circle" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="Round" parent="">
        <item name="cornerSize">20%</item>
    </style>










</resources>